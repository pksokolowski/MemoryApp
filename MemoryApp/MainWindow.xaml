<Window x:Class="MemoryApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStyle="None" AllowsTransparency="True" Background="{x:Null}">
    <Border CornerRadius="15" Background="Black" BorderBrush="#FFD36363" BorderThickness="5,0" MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid>
            <Slider x:Name="itemsCountSlider" Margin="611,406,10,10" Minimum="3" Maximum="15" SmallChange="1" TickPlacement="BottomRight" IsSnapToTickEnabled="True" ToolTip="Choose number of items to remember" AutoToolTipPlacement="TopLeft" Value="5"/>
            <Button Content="exit" Margin="692,10,10,420" Click="Button_Click"/>
            <TextBox x:Name="output" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Width="380" Height="158" VerticalAlignment="Top" Background="#FF212121" BorderBrush="#FF3E3E3E" SelectionBrush="{x:Null}" IsReadOnly="True" TextAlignment="Center" MaxLines="1" Foreground="White" FontSize="14"/>
            <Button x:Name="startButton" Content="Start" Margin="0,0,23,82" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="StartButton_Click"/>
            <TextBox x:Name="input" HorizontalAlignment="Left" Margin="343,173,0,0" TextWrapping="Wrap" Width="47" Background="#FF212121" BorderBrush="#FF3E3E3E" SelectionBrush="{x:Null}" TextAlignment="Center" MaxLines="1" Foreground="White" FontSize="14" Height="24" VerticalAlignment="Top" KeyDown="Input_KeyDown"/>
            <Slider x:Name="perItemTimeSlider" Margin="437,406,184,10" Minimum="100" Maximum="10000" SmallChange="100" TickPlacement="BottomRight" IsSnapToTickEnabled="True" ToolTip="duration for which each item is shown." AutoToolTipPlacement="TopLeft" Value="2000" LargeChange="1000" TickFrequency="1000"/>

        </Grid>
    </Border>
</Window>
